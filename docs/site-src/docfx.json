{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../../",
          "files": [ "explorer-game/explorer-game.csproj" ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      { "src": ".",  "files": [ "*.md", "toc.yml" ] },
      { "src": "..", "files": [ "*.md", "toc.yml" ] },
      { "src": "api", "files": [ "**/*.yml" ], "dest": "api" }
    ],
    "resource": [
      { "src": "../images", "files": [ "**/*" ], "dest": "images" }
    ],
    "output": "../_site",
    "template": [
      "default"
    ],
    "globalMetadata": {
      "_appName": "Remote Explorer Game",
      "_appTitle": "Remote Explorer Game",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
